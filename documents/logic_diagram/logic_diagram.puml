entity "Despesa" as despesa {
  + id : varchar(36) [pk, unique, not null]
  nome : varchar(255) [not null]
  valor : decimal(10, 2) [not null]
  descricao : text
  data : date [not null]
  status : enum('Paga', 'A Pagar') [not null]
